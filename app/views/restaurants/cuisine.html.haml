= render 'shared/header'

.row
  .col-md-3
    = render 'restaurants/res_menu'
  .col-md-9
    .panel.panel-default
      .panel-heading
        料理 メニュー
      .panel-body
        = form_with model: @restaurant do |f|
          .form-group
          %label ジャンル
          = f.text_field :genre, class: "form-control"
          -# = f.collection_select :restaurant_id, @restaurant, :name, :name, prompt: "--"

          %label メニュー概要
          = f.text_area :describe, rows: 6, placeholder: "メニュー記載お願いします。", class: "form-control", required: true
            
          .text-center
            = f.submit "保存", class: "btn btn-form"

= render 'shared/header'

.row
  .col-md-3
    = render 'restaurants/res_menu'
  .col-md-9
    .panel.panel-default
      .panel-heading
        住所　入力
      .panel-body
        = form_with model: @restaurant do |f|
          .form-group
          %label 郵便番号
          = f.text_field :address, placeholder: "郵便番号は?", class: "form-control"

          %label 住所
          = f.text_field :address, placeholder: "住所は?", class: "form-control"
            
          %label 電話番号
          = f.number_field :tel, placeholder: "電話番号?", class: "form-control"
          .text-center
            = f.submit "保存", class: "btn btn-form"

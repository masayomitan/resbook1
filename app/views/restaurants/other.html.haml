= render 'shared/header'

.row
  .col-md-3
    = render 'restaurants/res_menu'
  .col-md-6
    .panel.panel-default
      .panel-heading
        その他
      .panel-body
        = form_with model: @restaurant do |f|
          .row.form-group
          .col-md-4
            = f.check_box :cards
            クレジットカード
          .col-md-4
            = f.check_box :parking
            駐車場
          .col-md-4
            = f.check_box :tobacco
            タバコ
          .col-md-4
            = f.check_box :free_wifi
            free wifi
          .col-md-4
            = f.check_box :takeout
            お持ち帰り
          .col-md-4
            = f.check_box :private_room
            個室
          .col-md-4
            = f.check_box :party
            貸切
          .col-md-4
            = f.check_box :all_you_can_drink
            飲み放題
          .col-md-4
            = f.check_box :all_you_can_eat
            食べ放題
          .col-md-4
          = f.check_box :horiday
          堀大

          .col-md-4
          .row.form-group
          .text-center
            = f.submit "Save", class: "btn btn-form"

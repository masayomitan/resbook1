= render 'shared/header'
.row
  .col-md-3
    %ul.sidebar-list
      -# %li.sidebar-item= link_to "レストラン登録履歴", mypages_path,  class: "sidebar-link active"
      -# %li.sidebar-item= link_to "予約履歴", new_restaurant_path,  class: "sidebar-link active"
      
  .col-md-8
    .panel.panel-default
      .panel-heading
        登録レストラン
      .panel-body
        - @restaurant.each do |r|
          .row
            .col-md-2
              = link_to restaurant_path(r.id) do
                = image_tag r.images[0].image.url, class: "pro_pic", width: "250px", height: "250px"
                .col-md-7_1
                  = r.restaurant_name
              .restaurant-index-address
                = r.address
              .restaurant-index-edit
                = link_to "編集", edit_restaurant_path(r.id), class: "restaurant-index-edit1"
                = link_to "その他編集", other_restaurant_path(r.id), class: "restaurant-index-edit2"
                = link_to "削除", restaurant_path(r.id), method: :delete, class: "restaurant-index-delete"
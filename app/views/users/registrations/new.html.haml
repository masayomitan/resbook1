.row
  .col-md-4.col-md-offset-4
    %h2.text-center サインアップ

    .text-center
      = link_to "ログイン", new_session_path(resource_name)

    .container
    = form_with scope: resource, as: resource_name, url: registration_path(resource_name), local: true do |f|
      -# = render 'users/shared/devisemes'

      .form-group
        .don 必須
        = f.label :"名前"
        = f.text_field :name, placeholder: "名前", class: "form-control"
        
      .form-group
        .don 必須
        = f.label :"email"
        = f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control"

      
      .form-length
        %i= @minimum_password_length
        %i 文字以上入力してください
        
      .form-group
        .don 必須
        = f.label :"パスワード"
        = f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control"

      .actions
        = f.submit "Sign up", class: "btn btn-normal btn-block"
